<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soft1851.music.admin.mapper.SysAdminMapper">

    <select id="selectByName" resultMap="adminMap">
        SELECT t1.*,t2.role_id,t2.role_name
        FROM sys_admin t1,
            sys_role t2,
             role_admin t3
        WHERE t3.role_id = t2.role_id
        AND t3.admin_id = t1.id
        AND t1.name = #{name}
    </select>
    <resultMap id="adminMap" type="com.soft1851.music.admin.entity.SysAdmin">
        <result property="id" column="id" javaType="java.lang.String" />
        <result property="name" column="name" javaType="java.lang.String" />
        <result property="password" column="password" javaType="java.lang.String" />
        <result property="salt" column="salt" javaType="java.lang.String" />
        <result property="avatar" column="avatar" javaType="java.lang.String" />
        <result property="createTime" column="createTime" javaType="java.time.LocalDateTime" />
        <result property="updateTime" column="updateTime" javaType="java.time.LocalDateTime" />
        <collection property="roles" ofType="com.soft1851.music.admin.entity.SysRole">
            <result property="roleId" column="role_id" javaType="java.lang.Integer" />
            <result property="roleName" column="role_name" javaType="java.lang.String" />
        </collection>
    </resultMap>

</mapper>

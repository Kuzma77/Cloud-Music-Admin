<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soft1851.music.admin.mapper.SysAdminMapper">

    <resultMap id="adminMap" type="com.soft1851.music.admin.entity.SysAdmin">
        <result property="id" column="id" javaType="java.lang.String"/>
        <result property="account" column="account" javaType="java.lang.String"/>
        <result property="name" column="name" javaType="java.lang.String"/>
        <result property="avatar" column="avatar" javaType="java.lang.String"/>
        <result property="salt" column="salt" javaType="java.lang.String"/>
        <collection property="roles" ofType="com.soft1851.music.admin.entity.SysRole">
            <result property="roleId" column="role_id" javaType="java.lang.Integer"/>
            <result property="roleName" column="role_name" javaType="java.lang.String"/>
        </collection>
    </resultMap>

    <select id="selectByAccount" resultMap="adminMap">
        SELECT t1.id,t1.account, t1.name, t1.avatar, t1.salt,t3.role_id, t3.role_name
        FROM sys_admin t1,
             role_admin t2,
             sys_role t3
        WHERE t1.id = t2.admin_id
          AND t2.role_id = t3.role_id
          AND t1.account = #{account}
    </select>

    <update id="updateSysAdmin" parameterType="com.soft1851.music.admin.dto.AdminDto">
        Update sys_admin
        SET sys_admin.account = #{account} , sys_admin.name = #{name} , sys_admin.update_time=#{updateTime}
        WHERE sys_admin.id = #{id}
    </update>

</mapper>
